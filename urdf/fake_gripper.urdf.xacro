<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">
    <xacro:macro name="fake_gripper_actuation" params="prefix palm">
        <!-- Fake fingers to follow onrobot gripper convention -->
        <!-- It is compose of two pairs of an (empty) link and a joint, one is the mirror of the other -->
        <!-- Prevent Moveit from throwing error because it can't find gripper links/joints/controller from Gazebo -->
        <xacro:macro name="fake_finger" params="name is_master">
        <!-- tip -->
        <link name="${name}_finger_tip">
            <inertial>
            <mass value="0.001" />
            <inertia  ixx="0.0" ixy="0.0" ixz="0.0"
                      iyy="0.0" iyz="0.0"
                      izz="0.0" />
            </inertial>
        </link>
        <!-- Actuated joint -->
        <joint name="${prefix + ('' if is_master else '_mirror')}_joint" type="revolute">
            <parent link="${palm}"/>
            <child link = "${name}_finger_tip"/>
            <axis xyz="0 1 0"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <limit lower="0" upper="1.4" effort="1" velocity="1"/>
            <!-- <dynamics damping="0.5"/> -->
            <xacro:unless value="${is_master}">
            <mimic joint="${prefix}_joint" multiplier="1" offset="0"/>
            </xacro:unless>
        </joint>
        </xacro:macro>
        <xacro:fake_finger name="${prefix}_finger_1" is_master="true"/>
        <xacro:fake_finger name="${prefix}_finger_2" is_master="false"/>

        <gazebo>
        <plugin name="${prefix}_plugin" filename="libonrobot_gripper_plugin.so">
            <robotNamespace>/${prefix}</robotNamespace>
            <jointName>${prefix}_joint, ${prefix}_mirror_joint</jointName>
            <tipName>${prefix}_finger_1_finger_tip, ${prefix}_finger_2_finger_tip</tipName>
            <palmName>${palm}</palmName>
            <maxEffort>0.5</maxEffort>
        </plugin>
        </gazebo>
    </xacro:macro>
</robot>